---
interface Props {
  ID: string;
  NOMBRE: string;
  IMAGEN: string;
  DESCRIPCION: string;
}

const { ID, NOMBRE, IMAGEN, DESCRIPCION } = Astro.props;
---


  <article
    class="relative flex flex-col justify-end overflow-hidden rounded-xl px-28 pb-[9rem] pt-[6rem] max-w-48 mx-auto mt-12  tarjeta "
  >
  <a href={`/info-per/${ID}`}>
    <img
      class="absolute inset-0 h-full w-full object-cover imagen "
      src={IMAGEN}
      alt=""
    />
    <div class="z-1 flex flex-col items-center informacion">
      <h3 class="text-2xl font-bold text-nowrap  text-white ">{NOMBRE}</h3>
      <span class="text-white text-lg text-center text-wrap ">{DESCRIPCION}</span>
    </div>
  </a>
  </article>

<style>
  .tarjeta {
    
    cursor: pointer;
  }

  .imagen:hover {
    opacity: 0.2;
    transform: scale(1.04);
    transition: transform 0.5s ease-in-out;
  }
  .tarjeta:hover {
    border: 1px solid rgba(255, 255, 255, 0.438) ;
    transform: scale(1.04);
    transition: transform 0.5s ease-in-out;
  }

</style>
